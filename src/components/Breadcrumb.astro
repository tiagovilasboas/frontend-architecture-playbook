---
// Gera breadcrumbs baseado no pathname
const path = new URL(Astro.url).pathname.replace(/\/$/, '');
const segments = path.split('/').filter(Boolean);

function titleCase(str) {
  return str.replace(/-/g, ' ').replace(/\b\w/g, (c) => c.toUpperCase());
}
function hrefAt(index) {
  return '/' + segments.slice(0, index + 1).join('/') + '/';
}
---

{segments.length > 0 && (
  <nav aria-label="Breadcrumb" class="text-sm mb-4">
    <ol class="inline-flex items-center gap-1">
      <li><a href="/" class="link-hover opacity-70">Home</a></li>
      {segments.map((seg, i) => (
        <>
          <li class="mx-1 opacity-50">â€º</li>
          {i < segments.length - 1 ? (
            <li><a href={hrefAt(i)} class="link-hover opacity-70">{titleCase(seg)}</a></li>
          ) : (
            <li class="font-semibold text-base-content">{titleCase(seg)}</li>
          )}
        </>
      ))}
    </ol>
  </nav>
)}
