---
import DynamicIcon from './DynamicIcon.astro';
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: string;
}
const { title, description, href, icon } = Astro.props as Props;
---
<a href={href} class="card bg-base-200 p-4 border border-base-300 hover:border-primary transition block" data-title={title.toLowerCase()}>
  <div class="flex gap-3 items-start">
    {icon && (
      <div class="bg-base-300 rounded-box p-2 shrink-0">
        <DynamicIcon name={icon} size={20} />
      </div>
    )}
    <div>
      <h3 class="font-medium text-base-content">{title}</h3>
      <p class="text-sm opacity-70 mt-1 line-clamp-3">{description}</p>
    </div>
  </div>
</a>
--- 