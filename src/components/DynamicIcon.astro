---
import {
  Atom,
  Blocks,
  Cloud,
  Component,
  Folder,
  FolderGit2,
  LayoutTemplate,
  Layers3,
  Puzzle,
  Workflow,
  type LucideIcon,
} from 'lucide-astro';

interface Props {
  name: string;
  size?: number;
  class?: string;
}

const { name, size = 20, class: className = '' } = Astro.props as Props;

const icons: Record<string, LucideIcon> = {
  cloud: Cloud,
  'layout-template': LayoutTemplate,
  blocks: Blocks,
  component: Component,
  'layers-3': Layers3,
  atom: Atom,
  puzzle: Puzzle,
  workflow: Workflow,
  folder: Folder,
  'folder-git-2': FolderGit2,
};

const Icon = icons[name];
---
{Icon && <Icon size={size} class={className} />} 
--- 